{
  "name": "imba.io",
  "description": "Official website for Imba",
  "keywords": [
    "imba",
    "website"
  ],
  "author": "Sindre Aarsaether",
  "bugs": "https://github.com/somebee/imba.io/issues",
  "version": "1.0.0",
  "licenses": [
    {
      "type": "MIT",
      "url": "http://github.com/somebee/imba.io/raw/master/LICENSE"
    }
  ],
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "start": "webpack-dev-server --mode none",
    "build": "webpack --colors --display-modules --mode none",
    "build-netlify": "yarn run build && yarn run build build-content",
    "watch-content": "imba scripts/bundle-content.imba",
    "build-content": "RUN_ONCE=1 imba scripts/bundle-content.imba",
    "docker-build": "docker build -t imba.io:`git log --pretty=format:'%h' HEAD -n1` .",
    "docker-deploy": "docker push imba.io:`git log --pretty=format:'%h' HEAD -n1`",
    "docker-run": "docker run -p3011:3011 -t -i imba.io:`git log --pretty=format:'%h' HEAD -n1`",
    "lint": "imba src/data/guide.imba"
  },
  "files": [],
  "directories": {},
  "main": "./index.js",
  "homepage": "http://imba.io",
  "repository": {
    "type": "git",
    "url": "git://github.com/somebee/imba.io.git"
  },
  "imba":{
    "publicPath": "/dist",
    "serve": {
      "contentBase": "./public",
      "historyApiFallback": true
		},
    "manifest": {
      "path": "./public/dist/manifest.json"
    },
    "client": {
      "entries": ["./src/index.imba","./src/apis/imdb.js"],
      "outdir": "./public/dist"
    },
    "entries": {
      "./src/sw.imba": {
        "outdir": "./public/dist",
        "platform": "worker",
        "format": "esm"
      },
      "./src/repl/workers/imba/worker.imba": {
        "platform": "worker",
        "format": "iife",
        "outdir": "./public/dist",
        "outbase": "./src",
        "globalName": "WorkerEntry",
        "banner": "define(()=>{",
        "footer": "return WorkerEntry; })"
      }
    }
  },
  "devDependencies": {
    "webpack": "^5.6.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "dependencies": {
    "@types/node": "^13.11.1",
    "body-parser": "^1.19.0",
    "chokidar": "^3.3.1",
    "express": "^4.17.1",
    "express-history-api-fallback": "^2.2.1",
    "imba": "^2.0.0-alpha.100",
    "marked": "^0.7.0",
    "tippy.js": "^6.2.7"
  }
}
