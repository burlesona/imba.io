{
  "name": "imba.io",
  "description": "Official website for Imba",
  "keywords": [
    "imba",
    "website"
  ],
  "author": "Sindre Aarsaether",
  "bugs": "https://github.com/somebee/imba.io/issues",
  "version": "1.0.0",
  "licenses": [
    {
      "type": "MIT",
      "url": "http://github.com/somebee/imba.io/raw/master/LICENSE"
    }
  ],
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "start": "imba dev",
    "build": "imba build --prod",
    "watch-content": "imba scripts/bundle-content.imba",
    "build-content": "RUN_ONCE=1 imba scripts/bundle-content.imba",
    "docker-build": "docker build -t imba.io:`git log --pretty=format:'%h' HEAD -n1` .",
    "docker-deploy": "docker push imba.io:`git log --pretty=format:'%h' HEAD -n1`",
    "docker-run": "docker run -p3011:3011 -t -i imba.io:`git log --pretty=format:'%h' HEAD -n1`"
  },
  "files": [],
  "directories": {},
  "main": "./index.js",
  "homepage": "http://imba.io",
  "repository": {
    "type": "git",
    "url": "git://github.com/somebee/imba.io.git"
  },
  "imba": {
    "puburl": "/assets/",
    "serve": {
      "contentBase": "./public",
      "historyApiFallback": true
    },
    "browser": [
      "./src/index.imba",
      "./src/apis/imdb.js"
    ],
    "entries": {
      "./src/sw.imba": {
        "platform": "worker",
        "format": "esm"
      },
      "./src/repl/workers/imba/worker.imba": {
        "platform": "worker",
        "format": "iife",
        "globalName": "WorkerEntry",
        "banner": "define(()=>{",
        "footer": "return WorkerEntry; })"
      }
    },
    "theme": {
      "fonts": {
        "mono": [
          "Source Code Pro",
          "Consolas",
          "Menlo",
          "Monaco",
          "Courier",
          "monospace"
        ]
      }
    }
  },
  "devDependencies": {},
  "dependencies": {
    "@types/node": "^13.11.1",
    "body-parser": "^1.19.0",
    "chokidar": "^3.3.1",
    "imba": "^2.0.0-alpha.100",
    "marked": "^0.7.0",
    "tippy.js": "^6.2.7"
  }
}
